<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>BlogVista</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container" style="margin-top: 20px;">
      <form method="post" action="/blog/newBlog" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Title</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="title">
        </div>
        <div class="mb-3" >
          <label for="body" class="form-label">Body</label><br>
          <textarea name="body" id="body" style="width:100%"></textarea>
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="coverImage">
        </div>
         
        <button type="submit" class="btn btn-primary">Add Blog</button>
      </form>
    </div>

    <div class="footimage" style="display: flex; justify-content: center;">
      <img src="/BLOG1.jpg" alt="" width="450px" >
    </div>
   
    <%- include('./partials/scripts') %>
</body>
</html>