<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>BlogVista</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <% if (locals.blogs) { %>
        <div class="container" style="display: flex; gap:0px 20px;flex-wrap: wrap;">
            <% blogs.forEach(blog => { %>
                <div class="card" style="width: 18rem;margin-top: 10px;">
                    <img src="<%= blog.coverImage %>" class="card-img-top" style="contain: content;" height="200px">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                      <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                    </div>
                  </div>
            <% }) %>       
        </div>
    <% } %>
   
    <%- include('./partials/scripts') %>
</body>
</html>